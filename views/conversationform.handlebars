<h1>{{formtitle}}</h1>
<hr>
<div class="blog-post col-xs-9">
              <form method="post" action="/conversation"  role="form" class="form-horizontal">
                <input type="hidden" name="locator" value="{{locator}}">
                <input type="hidden" name="contextLocator" value="{{context}}">
                <input type="hidden" name="nodefoo" value="{{nodetype}}"> 
                <div class="form-group">
                  <label for="title" class="col-sm-2 control-label">Title</label>
                  <div class="col-sm-10">
                    <input id="title" type="text" name="title" value="{{title}}" placeholder="Enter the title" class="form-control">
                  </div>
               </div>
               <div class="form-group">
                  <label for="summernote" class="col-sm-2 control-label">Body</label>
                  <div class="col-sm-10">
                    <textarea id="summernote" rows="5" name="body" placeholder="Enter the node description" class="form-control">{{body}}</textarea>
                  </div>
                </div>
                {{#if isNotEdit}}
                <div class="form-group">
                  <label for="tags" class="col-sm-2 control-label">Tags</label>
                  <div class="col-sm-10">
                    <input id="tags" type="text" name="tags" value="" placeholder="Enter the tags" class="form-control">
                  </div>
                </div>
                {{/if}}
                <div class="form-group">
                  <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Save</button>&nbsp;<a href="/" title="cancel" class="btn">Cancel</a>
                  </div>
                </div>
              </form>
</div>
