        <div class="main-content">
          <div class="main-head">
            <h1>New Article</h1>
            <hr>
          </div>
          <div class="row">
            <div class="col-md-8">
              <form method="post" action="/blog"  role="form" class="form-horizontal"> <!-- enctype="multipart/form-data" cannot be used -->
                <input type="hidden" name="_csrf" value="">
                <div class="form-group">
                  <label for="title" class="col-sm-2 control-label">Title</label>
                  <div class="col-sm-10">
                    <input id="title" type="text" name="title" value="" placeholder="Enter the title" class="form-control">
                  </div>
               </div>
               <div class="form-group">
                  <label for="desc" class="col-sm-2 control-label">Body</label>
                  <div class="col-sm-10">
                    <textarea id="desc" rows="5" name="body" placeholder="Enter the article description" class="form-control"></textarea>
                  </div>
                </div>
                <div class="form-group">
                  <label for="tags" class="col-sm-2 control-label">Tags</label>
                  <div class="col-sm-10">
                    <input id="tags" type="text" name="tags" value="" placeholder="Enter the tags" class="form-control">
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Save</button>&nbsp;<a href="/articles" title="cancel" class="btn">Cancel</a>
                  </div>
                </div>
              </form>
            </div>
            <div class="col-md-4">
            </div>
          </div>
        </div>
      </div>