                    auto: true,
                    interval: 4000,
                    swap: false
                },
                navigation: {
                    active: false,
                    effect: "fade"
                },

                pagination: {
                    active: false,
                    effect: "fade"
                },
                effect: {

                    fade: {
                        speed: 0,
                        crossfade: false
                    }
                },
                end: 3
            });
        });
  </script>
  <script>
    jQuery(document).ready(function ($) {
      initPage();
      //rich text
      $('.sidenote').summernote({
        height: 100,
        toolbar: false
         });
         
      //topicnote is the topic.handlebars view
     $('.topicnote').summernote({
        height: 300,
        toolbar: [
    //[groupname, [button list]]
     
    ['misc', ['fullscreen']]
  ]
         });
      //summernote is for blogform.handlebars and wikiform.handlebars
      $('#summernote').summernote({
        height: 300,
          onImageUpload: function(files, editor, $editable) {
         // alert(files[0].name);
            sendFile(files[0], editor, $editable);
          }
        });

      
      //Deal with image uploading
      function sendFile(file, editor, welEditable) {
            data = new FormData();
            data.append("files", file);
            $.ajax({
                data: data,
                type: "POST",
                url: "/upload",
                cache: false,
                contentType: false,
                processData: false,
                error: function(err) {
                 alert("Error "+err);
                },
                success: function(url) {
             //     alert("Success "+url);
                  editor.insertImage(welEditable, url);
                }
            });
        }
      //datatables
      //These are index pages
      //TODO: replace entire system.
     try { 
      //Blogs
       $('#datatable').dataTable({
